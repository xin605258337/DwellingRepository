<!--pages/userpage/userpage.wxml-->
<view class="user-head">
    <view class="center" bindtap = "userdata">
        <view class="user-img">
            <image src="{{userInfo.avatarUrl}}"/>
        </view>
        <view class="user-text">
            <text class="text">{{userInfo.nickName}}</text>
        </view>
    </view>
</view>

 <view class="category">
  <view class="category_item" wx:for="{{iconArray}}">
    <view class="category_item_wrap">
    
      <view class="icon_wrap" >
      <navigator url="{{item.url}}">
        <image src="{{item.iconUrl}}" class="index_icon"></image>
        </navigator>
      </view>
      <view class="category_item_text">
        <text>{{item.iconText}}</text>
      </view> 
    </view>
  </view>
</view>

<view class="list">
    <view class="item" bindtap="order">
        <image src=""/>投诉与建议
        <text class="jump">〉</text>
    </view>
    <view class="item" bindtap="address">
        <image src=""/>关于我们
        <text class="jump">〉</text>
    </view>
    <view class="item" bindtap="order">
        <image src=""/>请联系蜗居
        <text class="jump">〉</text>
    </view>
</view>

